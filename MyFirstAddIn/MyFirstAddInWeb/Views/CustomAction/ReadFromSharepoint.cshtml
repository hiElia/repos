            <label><img src="@Model.CustomerLogo" alt="@Model.CustomerLogo" style="width:100px;height:100px;"></label>
        </div>
        <div>
            <label>Title</label>-------------------------------------------------- -<label>@Model.Title</label>
        </div>        
            <div>
                <label>Email</label>----------------------------- --------------------<label>@Model.Email</label>
            </div>
            <div>
                <label>Address</label>--------------------------------------------- <label>@Model.Address</label>
            </div>
            <div>
