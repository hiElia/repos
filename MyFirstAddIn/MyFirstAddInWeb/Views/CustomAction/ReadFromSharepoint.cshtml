                <h1 style="text-decoration-color:blue;">Order Card</h1>
            </form>
            <form style="background-color:ButtonHighlight">
                @foreach (OrderList order in Model.Orders)
    {


            <div>Title--------------------------------------@order.Title</div>
            <div>Cutstomer Name---------------------@order.Customer</div>
            <div>Amount----------------------------------@order.Amount</div>
            <div>Product----------------------------------@order.Product</div>
}
            </form>
        </div>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("CreateNewOrder", "Create", "CreateNewOrder", new { customerId = Model.ID, ListId = ViewBag.ListId }, null)</li>
        </ul>
    </div>
















